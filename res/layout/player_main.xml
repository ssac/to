<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
  
    <LinearLayout
        android:id="@+id/map"
        android:layout_width="880dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <com.google.android.maps.MapView
	        android:id="@+id/mapview"
	        android:layout_width="match_parent" 
	        android:layout_height="match_parent"
	        android:state_enabled="true"
	        android:clickable="true"
	        android:apiKey="@string/maps_api_key"
	    />
        
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:id="@+id/controller"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" >
            
            <TextView
		        android:id="@+id/timer_timer"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/timer_default_time" >
	   		</TextView>
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/point_list"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical" >
                
            <LinearLayout
            	android:id="@+id/point_list_buttons"
            	android:gravity="center"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal"
            >
            
            	<Button
                	android:id="@+id/point_list_add"
	                android:layout_gravity="center_horizontal"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/point_list_add" />
	            
	            <Button
	                android:id="@+id/point_list_delete"
	                android:visibility="gone"
	                android:layout_gravity="center_horizontal"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/point_list_delete" />
	               
                <Button
                	android:id="@+id/point_list_save"
                	android:visibility="gone"
                	android:layout_gravity="right"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:text="@string/point_list_save" />
            
            </LinearLayout>
            
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/point_list_listview" 
                >
            </ListView>
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/point_info"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical" >
            
            <TextView
            	android:id="@+id/point_info_title"
            	android:textSize="15sp"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:text="@string/point_info_title"
            	>
            </TextView>
            
            <TextView
            	android:id="@+id/point_info_title_content"
            	android:textSize="15sp"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	>
            </TextView>
            
            <TextView
            	android:id="@+id/point_info_coordinate"
            	android:textSize="15sp"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:text="@string/point_info_coordinate"
            	>
            </TextView>
            
            <TextView
		        android:id="@+id/point_info_coordinate_content"
		        android:textSize="15sp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        >
		    </TextView>
		    
		    <TextView
            	android:id="@+id/point_info_desc"
            	android:textSize="15sp"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:text="@string/point_info_desc"
            	>
            </TextView>
            
            <EditText
		        android:id="@+id/point_info_desc_content"
		        android:textSize="15sp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:inputType="textMultiLine" 
		        >

		    </EditText>
		    
        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>