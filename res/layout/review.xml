<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TableLayout
        android:id="@+id/review_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow style="@style/review_table_row" >

            <TextView
                style="@style/review_table_row_text"
                android:text="@string/review_check_point" />

            <TextView
                style="@style/review_table_row_text"
                android:text="@string/review_reach_time" />

            <TextView
                style="@style/review_table_row_text"
                android:text="@string/review_time_cost" />
        </TableRow>
    </TableLayout>

</ScrollView>